{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "iOS: Reset Pods",
      "type": "shell",
      "command": "cd ios && rm -rf Pods Podfile.lock && pod cache clean --all && pod repo update && pod install && cd ..",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "build_runner build",
      "type": "shell",
      "command": "fvm dart run build_runner build --delete-conflicting-outputs",
      "presentation": {
        "panel": "shared",
        "focus": true
      },
      "problemMatcher": ["$dart-build_runner"],
      "isBackground": true
    },
    {
      "label": "build_runner watch",
      "type": "shell",
      "command": "fvm dart run build_runner watch -d --use-polling-watcher",
      "presentation": {
        "panel": "shared",
        "focus": true
      },
      "problemMatcher": ["$dart-build_runner"],
      "isBackground": true
    },
    {
      "label": "build_runner clean",
      "type": "shell",
      "command": "fvm dart run build_runner clean",
      "presentation": {
        "panel": "shared",
        "focus": true
      },
      "problemMatcher": ["$dart-build_runner"],
      "isBackground": true
    },
    {
      "label": "dart format",
      "type": "shell",
      "command": "fvm dart format lib",
      "presentation": {
        "panel": "shared",
        "focus": true
      },
      "problemMatcher": ["$dart-build_runner"],
      "isBackground": true
    },
    {
      "label": "analyze",
      "type": "shell",
      "command": "fvm dart analyze lib --fatal-infos",
      "presentation": {
        "panel": "shared",
        "focus": true
      },
      "problemMatcher": ["$dart-build_runner"],
      "isBackground": true
    }
  ]
}
